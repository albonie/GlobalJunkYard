<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="180dp"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardCornerRadius="15dp"
                                   android:layout_margin="5dp"

>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"


                    android:id="@+id/offerBackground"
                    android:background="@drawable/grass"

    >


        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content"
                   android:id="@+id/tloPrzepisu"
                   android:background="@color/ecoGreen"
                   android:scaleType="centerCrop"
                   android:foreground="@color/semi_transparent" tools:ignore="ContentDescription,UnusedAttribute"/>
        <ImageView android:layout_width="125dp" android:layout_height="125dp"
                   android:id="@+id/offerIcon"
                   android:padding="25dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/kanapa"
                   android:background="@drawable/circle"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                   android:layout_marginBottom="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/offerTitle"
                  android:text="@string/tTytul"
                  android:layout_toEndOf="@id/offerIcon"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_marginTop="20dp"


                  android:layout_marginStart="2dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/offerDescription"
                  android:text="@string/tOpis"
                  android:layout_toEndOf="@id/offerIcon"
                  android:layout_below="@id/offerTitle"
                  android:textSize="15sp"
                  android:textColor="@color/gray"
        />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
